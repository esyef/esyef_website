---
import type {SocialLinks as DSocialLinks } from '../components/types'
import '../app.css'
import SocialLinks from '../components/SocialLinks.astro'
import iconLinkedin from '../images/icon-linkedin.svg'
import iconGithub from '../images/icon-github.svg'
import iconFMentor from '../images/icon-frontend-mentor.svg'
import Profile from '../components/Profile/Profile.astro'



const data: DSocialLinks[] = [
	{
		icon: iconFMentor.src,
		link: 'https://www.frontendmentor.io/profile/esyef',
		title:'Frontend Mentor esyef profile'
	},
	{
		icon: iconLinkedin.src,
		link: 'https://www.linkedin.com/in/esyef/',
		title:'Linkedin esyef profile'
	},
	{
		icon: iconGithub.src,
		link: 'https://github.com/esyef',
		title:'Github esyef profile'
	},

]

---

<html lang='en'>
	<head>
		<meta charset='utf-8' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<meta name='generator' content={Astro.generator} />
		<title>esyef - Desarrollador web</title>
	</head>
	<body class="bg-black wrapper relative font-display overflow-x-hidden">
		<!-- Header -->
		<header class="flex flex-col md:flex-row gap-5 pt-5 md:pt-7 lg:pt-11 justify-between sticky z-50">
			
			<!-- Logo -->
			<h1 class="text-white text-center">
				<a href="/" class="text-M font-bold tracking-tight">
					esyef
				</a>
			</h1>
			
			<SocialLinks 
				data={data}
			/>
		</header>

		<!-- Profile section -->
		<Profile />
	</body>
</html>
